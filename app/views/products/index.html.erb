<h1>Listing products</h1>

<%= form_tag('/products', :method => :get, :class => 'form-inline') do %>
		
  	<%= check_box_tag :display, "all", params[:display]  %>
		<%= label_tag(:display, "Show all?") %>
		<%= submit_tag "Filtered"%>
<% end -%>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Id</th>
    <th>Displayid</th>
    <th>Nickname</th>
    <th>Size</th>
    <th>Thickness rep</th>
    <th>Film</th>
    <th>Weight estimated</th>
    <th>Pcs/pack</th>
    <th>Pcs/truck</th>
    <th>Weight Range</th>
    <th>In Production</th>
    <th>Percent of coil</th>
    <th>Vat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td ><%= product.id %></td>
    <td><%= product.displayid %></td>
    <td><%= product.nameinit %></td>
    <td><%= product.size %></td>
    <td><%= number_with_precision 	product.threp, :precision => 2 %></td>
    <td><%= number_with_precision 	product.film, :precision => 2 %></td>
    <td><%= number_with_precision 	product.estw, :precision => 2 %></td>
    <td><%= number_with_precision product.pcspack, :precision => 0 %></td>
    <td><%= number_with_precision product.pcstruck, :precision => 0 %></td>
    <td><%= product.wdisplay %></td>
    <td><%= product.inprod %></td>
    <td><%= number_with_precision product.pct, :precision => 2 %></td>
    <td><%= product.vat %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
